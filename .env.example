# Astro DB (Turso)
ASTRO_DB_REMOTE_URL=libsql://your-database.turso.io
ASTRO_DB_APP_TOKEN=your-token

# CDN for images
CDN_DEV_DOMAIN=example.com
CDN_DOMAIN=example.com

# Vercel ISR (used for cache revalidation)
VERCEL_ISR_BYPASS_TOKEN=random-string

# Wishlist
RESERVATIONS_ENABLED=true

# Admin Panel (Passkey Authentication)
# Token for first-time passkey setup (visit /wishlist/~/setup?token=<this-value>)
# Generate with: openssl rand -base64 24 | tr '+/' '-_'
ADMIN_SETUP_SECRET=random-32-character-string
# Secret for signing session cookies (use a long random string)
# Generate with: openssl rand -base64 48 | tr '+/' '-_'
ADMIN_SESSION_SECRET=random-64-character-string
# WebAuthn Relying Party ID (your domain without protocol, e.g., example.com)
ADMIN_RP_ID=localhost
# Human-readable name shown during passkey registration
ADMIN_RP_NAME=your-site-name

# Cloudflare R2 (for image uploads in admin panel)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=your-bucket-name
