---
import "@styles/global.css";
import { Font } from "astro:assets";
import { SEO } from "astro-seo";

interface AlternateLink {
  lang: string;
  href: string;
}

interface Props {
  title: string;
  description?: string;
  image?: string;
  lang?: "en" | "ru";
  alternates?: AlternateLink[];
}

const {
  title,
  description = "Software engineer & traveler",
  image,
  lang = "en",
  alternates = [],
} = Astro.props;
const cdnDomain = import.meta.env.PROD ? "cdn.orlovsky.dev" : null;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImage = image ?? "https://orlovsky.dev/og-image.png";
---

<html lang={lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover" />
    {alternates.map((alt) => (
      <link rel="alternate" hreflang={alt.lang} href={alt.href} />
    ))}
    <SEO
      title={title}
      description={description}
      canonical={canonicalURL.href}
      openGraph={{
        basic: {
          title,
          type: "website",
          image: ogImage,
          url: canonicalURL.href,
        },
        optional: {
          description,
          siteName: "Zach",
        },
      }}
      twitter={{
        card: "summary_large_image",
        title,
        description,
        image: ogImage,
      }}
    />
    <link rel="icon" href="/favicon.svg" />
    <link rel="mask-icon" href="/favicon.svg" color="#000000" />
    <meta
      name="theme-color"
      content="#f8f8ff"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#191919"
      media="(prefers-color-scheme: dark)"
    />
    {cdnDomain && <link rel="preconnect" href={`https://${cdnDomain}`} />}
    <link rel="dns-prefetch" href="https://static.cloudflareinsights.com" />
    <Font cssVariable="--font-inter" preload />
    <Font cssVariable="--font-fira-code" />
  </head>
  <body>
    <slot />
    <script
      defer
      src="https://static.cloudflareinsights.com/beacon.min.js"
      data-cf-beacon='{"token": "3af10005546641a0882b81846b2f6d3b"}'></script>
  </body>
</html>
