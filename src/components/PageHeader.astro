---
import LangSwitcher from "@components/LangSwitcher.astro";

interface Props {
  pageTitle: {
    en: string;
    ru: string;
    href?: string;
  };
  subtitle?: {
    en: string;
    ru: string;
  };
  variant?: "minimal" | "fancy";
  langSwitcher?: string;
  parentLink?: {
    href: string;
    label: {
      en: string;
      ru: string;
    };
  };
}

const {
  pageTitle,
  subtitle,
  variant = "fancy",
  langSwitcher,
  parentLink,
} = Astro.props;
const pageTitleHref = pageTitle.href;
const isMinimal = variant === "minimal";
---

<header class:list={["page-header", { minimal: isMinimal, fancy: !isMinimal }]}>
  <div class="title-row">
    <h1 class="title">
      <a href="/" class="name-link" data-en="Zach" data-ru="Зак">Zach</a>
      <span class="separator">/</span>
      {
        parentLink && (
          <>
            <a
              href={parentLink.href}
              class="parent-link"
              data-en={parentLink.label.en}
              data-ru={parentLink.label.ru}
            >
              {parentLink.label.en}
            </a>
            <span class="separator">/</span>
          </>
        )
      }
      {
        pageTitleHref ? (
          <a
            href={pageTitleHref}
            class="page-title-link"
            data-en={pageTitle.en}
            data-ru={pageTitle.ru}
          >
            {pageTitle.en}
          </a>
        ) : (
          <span class="page-title" data-en={pageTitle.en} data-ru={pageTitle.ru}>
            {pageTitle.en}
          </span>
        )
      }
    </h1>
    {langSwitcher && <LangSwitcher storageKey={langSwitcher} />}
    <slot name="actions" />
  </div>
  {
    subtitle && (
      <p class="subtitle" data-en={subtitle.en} data-ru={subtitle.ru}>
        {subtitle.en}
      </p>
    )
  }
  <slot />
</header>

<style>
  /* Base styles */
  .page-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .title-row {
    display: flex;
    align-items: baseline;
    justify-content: center;
  }

  .title {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.35em;
    font-weight: 700;
    letter-spacing: -0.03em;
    margin: 0;
  }

  .name-link {
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .separator {
    color: light-dark(#666, #888);
  }

  /* Fancy variant name-link - dim */
  .fancy .name-link {
    color: light-dark(#666, #888);
    -webkit-text-fill-color: light-dark(#666, #888);
  }

  .fancy .name-link:hover {
    color: light-dark(#444, #bbb);
    -webkit-text-fill-color: light-dark(#444, #bbb);
  }

  /* Minimal variant name-link - dim */
  .minimal .name-link {
    color: light-dark(#666, #888);
    -webkit-text-fill-color: light-dark(#666, #888);
  }

  .minimal .name-link:hover {
    color: light-dark(#444, #bbb);
    -webkit-text-fill-color: light-dark(#444, #bbb);
  }

  .name-link:focus-visible,
  .parent-link:focus-visible {
    outline: 2px solid light-dark(#333, #fff);
    outline-offset: 2px;
    border-radius: 2px;
  }

  /* Parent link (breadcrumb middle segment) */
  .parent-link {
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .minimal .parent-link {
    color: light-dark(#666, #999);
  }

  .minimal .parent-link:hover {
    color: light-dark(#444, #bbb);
  }

  .fancy .parent-link {
    color: light-dark(#666, #888);
  }

  .fancy .parent-link:hover {
    color: light-dark(#444, #bbb);
  }

  .subtitle {
    color: light-dark(#666, #999);
    margin: 0;
    font-weight: 400;
  }

  /* Fancy variant (default) */
  .fancy .title {
    font-size: clamp(2rem, 6vw, 3rem);
  }

  .fancy .page-title {
    background: linear-gradient(135deg, rgb(237, 98, 146), rgb(237, 87, 96));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .fancy .subtitle {
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }

  /* Minimal variant */
  .minimal {
    text-align: left;
    margin: 0;
  }

  .minimal .title-row {
    justify-content: space-between;
    align-items: center;
  }

  .minimal .title {
    justify-content: flex-start;
    font-size: 24px;
    min-width: 0;
    flex-wrap: wrap;
  }

  .minimal .page-title {
    background: linear-gradient(135deg, rgb(237, 98, 146), rgb(237, 87, 96));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 100%;
  }

  .minimal .page-title-link {
    background: linear-gradient(135deg, rgb(237, 98, 146), rgb(237, 87, 96));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .minimal .page-title-link:hover {
    opacity: 0.7;
  }

  .fancy .page-title-link {
    background: linear-gradient(135deg, rgb(237, 98, 146), rgb(237, 87, 96));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .fancy .page-title-link:hover {
    opacity: 0.7;
  }

  .page-title-link:focus-visible {
    outline: 2px solid light-dark(#333, #fff);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .minimal .subtitle {
    font-size: 0.95rem;
  }

  @media (prefers-reduced-motion: reduce) {
    .name-link,
    .parent-link,
    .page-title-link {
      transition: none;
    }
  }
</style>
