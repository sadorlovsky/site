---
import LangSwitcher from "@components/LangSwitcher.astro";

interface Props {
  pageTitle: {
    en: string;
    ru: string;
    href?: string;
  };
  subtitle?: {
    en: string;
    ru: string;
  };
  langSwitcher?: string;
  parentLink?: {
    href: string;
    label: {
      en: string;
      ru: string;
    };
  };
  forceLang?: "en" | "ru";
}

const {
  pageTitle,
  subtitle,
  langSwitcher,
  parentLink,
  forceLang,
} = Astro.props;

// Use forceLang if provided, otherwise default to "en" (client-side JS will update)
const displayLang = forceLang || "en";
const pageTitleHref = pageTitle.href;
---

<header class="page-header">
  <div class="title-row">
    <h1 class="title">
      <a href="/" class="name-link" data-en="Zach" data-ru="Зак">{displayLang === "ru" ? "Зак" : "Zach"}</a>
      <span class="separator">/</span>
      {
        parentLink && (
          <>
            <a
              href={parentLink.href}
              class="parent-link"
              data-en={parentLink.label.en}
              data-ru={parentLink.label.ru}
            >
              {displayLang === "ru" ? parentLink.label.ru : parentLink.label.en}
            </a>
            <span class="separator">/</span>
          </>
        )
      }
      {
        pageTitleHref ? (
          <a
            href={pageTitleHref}
            class="page-title-link"
            data-en={pageTitle.en}
            data-ru={pageTitle.ru}
          >
            {displayLang === "ru" ? pageTitle.ru : pageTitle.en}
          </a>
        ) : (
          <span class="page-title" data-en={pageTitle.en} data-ru={pageTitle.ru}>
            {displayLang === "ru" ? pageTitle.ru : pageTitle.en}
          </span>
        )
      }
    </h1>
    {langSwitcher && <LangSwitcher storageKey={langSwitcher} />}
    <slot name="actions" />
  </div>
  {
    subtitle && (
      <p class="subtitle" data-en={subtitle.en} data-ru={subtitle.ru}>
        {displayLang === "ru" ? subtitle.ru : subtitle.en}
      </p>
    )
  }
  <slot />
</header>

<style>
  .page-header {
    text-align: left;
    margin: 0;
  }

  .title-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .title {
    display: flex;
    align-items: baseline;
    justify-content: flex-start;
    gap: 0.35em;
    font-weight: 700;
    font-size: 24px;
    letter-spacing: -0.03em;
    margin: 0;
    min-width: 0;
    flex-wrap: wrap;
  }

  .name-link {
    text-decoration: none;
    color: light-dark(#666, #888);
    -webkit-text-fill-color: light-dark(#666, #888);
    transition: opacity 0.2s ease;
  }

  .name-link:hover {
    color: light-dark(#444, #bbb);
    -webkit-text-fill-color: light-dark(#444, #bbb);
  }

  .name-link:focus-visible,
  .parent-link:focus-visible {
    outline: 2px solid light-dark(#333, #fff);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .separator {
    color: light-dark(#666, #888);
  }

  .parent-link {
    text-decoration: none;
    color: light-dark(#666, #999);
    transition: opacity 0.2s ease;
  }

  .parent-link:hover {
    color: light-dark(#444, #bbb);
  }

  .page-title {
    background: linear-gradient(135deg, rgb(237, 98, 146), rgb(237, 87, 96));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 100%;
  }

  .page-title-link {
    background: linear-gradient(135deg, rgb(237, 98, 146), rgb(237, 87, 96));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .page-title-link:hover {
    opacity: 0.7;
  }

  .page-title-link:focus-visible {
    outline: 2px solid light-dark(#333, #fff);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .subtitle {
    color: light-dark(#666, #999);
    margin: 0;
    margin-top: 0.5rem;
    font-weight: 400;
    font-size: 0.95rem;
  }

  @media (prefers-reduced-motion: reduce) {
    .name-link,
    .parent-link,
    .page-title-link {
      transition: none;
    }
  }
</style>
