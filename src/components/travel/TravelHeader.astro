---
import { Icon } from "astro-icon/components";
import LangSwitcher from "@components/LangSwitcher.astro";

interface Props {
  pageTitle: {
    en: string;
    ru: string;
  };
}

const { pageTitle } = Astro.props;
---

<div class="heading">
  <h1 class="title">
    <a href="/" class="name-link" data-en="Zach" data-ru="Зак">Zach</a>
    <span class="separator">/</span>
    <span class="page-title" data-en={pageTitle.en} data-ru={pageTitle.ru}
      >{pageTitle.en}</span
    >
  </h1>
  <a
    class="photos-link"
    href="https://instagram.com/sadorlovsky"
    target="_blank"
    rel="noopener noreferrer"
    aria-label="My travel photos on Instagram"
    data-aria-label-en="My travel photos on Instagram"
    data-aria-label-ru="Фото из путешествий в Instagram"
  >
    <Icon name="instagram" width={24} height={24} aria-hidden="true" />
    <span
      class="only-wide"
      data-en="My travel photos"
      data-ru="Фото из путешествий">My travel photos</span
    >
  </a>
  <LangSwitcher storageKey="travel-lang" />
</div>

<style>
  .heading {
    margin-top: 20px;
    display: flex;
    align-items: center;
    gap: 20px;
  }

  h1 {
    margin: 0;
    font-size: 24px;
    display: flex;
    align-items: baseline;
    gap: 0.35em;
  }

  .name-link,
  .separator {
    color: light-dark(#666, #888);
  }

  .name-link {
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .name-link:hover {
    color: light-dark(#111, #fff);
  }

  .name-link:focus-visible {
    outline: 2px solid light-dark(#333, #fff);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .photos-link {
    display: flex;
    align-items: center;
    gap: 0.5em;
    text-decoration: none;
    color: unset;
    padding: 0.25rem;
    border-radius: 6px;
    transition: color 0.2s ease;
  }

  .photos-link:hover {
    color: light-dark(#111, #fff);
  }

  .photos-link:focus-visible {
    outline: 2px solid light-dark(#333, #fff);
    outline-offset: 2px;
  }

  .title {
    flex-grow: 2;
  }

  .picture {
    width: 24px;
  }

  @media (max-width: 480px) {
    .only-wide {
      display: none;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .photos-link,
    .name-link {
      transition: none;
    }
  }
</style>

<script>
  import { initLang, applyTranslations } from "@lib/i18n";

  const lang = initLang("travel-lang");
  applyTranslations(lang);
</script>
