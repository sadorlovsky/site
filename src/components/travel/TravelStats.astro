---
import { Icon } from "astro-icon/components";
import ProgressBar from "@components/kit/ProgressBar.astro";
import {
  countries,
  countryListSize,
  cities,
  tripsCount,
  continentsVisited,
  continentsTotal,
} from "@lib/travel";
---

<div class="stats">
  <div class="card">
    <h3 data-en="Trips" data-ru="Поездки">Trips</h3>
    <div class="value">{tripsCount}</div>
  </div>
  <div class="card">
    <h3 data-en="Countries" data-ru="Страны">Countries</h3>
    <div class="with-info">
      <span class="value">{countries.size} / {countryListSize}</span>
      <a
        href="/travel/countries"
        class="info-link"
        target="_blank"
        aria-label="Why this number? View country list"
        data-aria-label-en="Why this number? View country list"
        data-aria-label-ru="Почему такое число? Посмотреть список стран"
        title="Why this number? View country list"
        data-title-en="Why this number? View country list"
        data-title-ru="Почему такое число? Посмотреть список стран"
      >
        <Icon name="question" class="info-icon" aria-hidden="true" />
      </a>
    </div>
    <ProgressBar value={countries.size} max={countryListSize} label="Countries visited progress" accent />
  </div>
  <div class="card">
    <h3 data-en="Cities" data-ru="Города">Cities</h3>
    <div class="value">{cities.size}</div>
  </div>
  <div class="card">
    <h3 data-en="Continents" data-ru="Континенты">Continents</h3>
    <div class="with-info">
      <span class="value">{continentsVisited} / {continentsTotal}</span>
      <a
        href="https://education.nationalgeographic.org/resource/Continent/"
        class="info-link"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Why 7 continents? National Geographic definition"
        data-aria-label-en="Why 7 continents? National Geographic definition"
        data-aria-label-ru="Почему 7 континентов? Определение National Geographic"
        title="Why 7 continents? National Geographic definition"
        data-title-en="Why 7 continents? National Geographic definition"
        data-title-ru="Почему 7 континентов? Определение National Geographic"
      >
        <Icon name="question" class="info-icon" aria-hidden="true" />
      </a>
    </div>
    <ProgressBar value={continentsVisited} max={continentsTotal} label="Continents visited progress" />
  </div>
</div>

<style>
  .stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 16px;
  }

  .card {
    background-color: #222222;
    padding: 1em;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    gap: 0.5em;
  }

  @media (prefers-color-scheme: light) {
    .card {
      background-color: #ebedf0;
    }
  }

  .card > h3 {
    margin: 0;
    font-size: 0.85rem;
    font-weight: 500;
    color: #888;
  }

  .value {
    font-weight: 600;
    font-size: 1.25rem;
    font-variant-numeric: tabular-nums;
  }

  .with-info {
    display: inline;
  }

  .info-link {
    display: inline-flex;
    vertical-align: super;
    padding: 0.1rem;
    border-radius: 4px;
    transition: color 0.2s ease;
  }

  .info-link:hover .info-icon {
    color: #888;
  }

  .info-link:focus-visible {
    outline: 2px solid light-dark(#333, #fff);
    outline-offset: 2px;
  }

  .info-icon {
    color: #666;
    width: 14px;
    height: 14px;
    transition: color 0.2s ease;
  }

  @media (max-width: 640px) {
    .stats {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .stats {
      grid-template-columns: repeat(2, 1fr);
      gap: 16px;
    }

    .card {
      padding: 0.75em;
    }

    .value {
      font-size: 1.1rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .info-link,
    .info-icon {
      transition: none;
    }
  }
</style>
