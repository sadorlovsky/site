---
import "flag-icons/css/flag-icons.min.css";
import "maplibre-gl/dist/maplibre-gl.css";

interface Props {
  mode?: "normal" | "globe";
}

const { mode = "globe" } = Astro.props;
---

<div id="map" class="map" data-testid="map" data-mode={mode}>
  <div id="placeholder" class="placeholder"></div>
</div>

<style>
  .map {
    height: 500px;
    border-radius: 5px;
    overflow: hidden;
    position: relative;
    /* iOS Safari fixes */
    -webkit-transform: translateZ(0);
    transform: translateZ(0);
    width: 100%;
  }

  .map:has(canvas:focus-visible) {
    outline: 2px solid light-dark(#333, #fff);
    outline-offset: 2px;
  }

  @media (max-width: 480px) {
    .map {
      height: 300px;
      /* iOS Safari mobile fixes */
      min-height: 300px;
      -webkit-overflow-scrolling: touch;
    }
  }

  .placeholder {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    opacity: 1;
    transition: opacity 0.5s ease-in;
    pointer-events: none;
    z-index: 1;
    border-radius: inherit;
    background: linear-gradient(90deg, #2a2a2a 0%, #3a3a3a 50%, #2a2a2a 100%);
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite ease-in-out;
  }

  @keyframes shimmer {
    0% {
      background-position: 200% 0;
    }
    100% {
      background-position: -200% 0;
    }
  }

  @media (prefers-color-scheme: light) {
    .placeholder {
      background: linear-gradient(90deg, #e0e0e0 0%, #f0f0f0 50%, #e0e0e0 100%);
      background-size: 200% 100%;
    }
  }

  .cities-toggle {
    position: absolute;
    top: 10px;
    right: 10px;
    z-index: 1000;
  }

  .toggle-label {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    padding: 8px 12px;
    border-radius: 6px;
    font-size: 16px;
    color: white;
    user-select: none;
  }

  @media (prefers-color-scheme: light) {
    .toggle-label {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      color: black;
      border: 1px solid rgba(0, 0, 0, 0.2);
    }
  }

  .toggle-input {
    display: none;
  }

  .toggle-slider {
    position: relative;
    width: 32px;
    height: 18px;
    background: #666;
    border-radius: 9px;
    transition: background 0.3s ease;
  }

  .toggle-slider::before {
    content: "";
    position: absolute;
    top: 2px;
    left: 2px;
    width: 14px;
    height: 14px;
    background: white;
    border-radius: 50%;
    transition: transform 0.3s ease;
  }

  .toggle-input:checked + .toggle-slider {
    background: #00d4ff;
  }

  .toggle-input:checked + .toggle-slider::before {
    transform: translateX(14px);
  }

  @media (prefers-color-scheme: light) {
    .toggle-slider {
      background: #ccc;
    }
  }

  @media (max-width: 480px) {
    .cities-toggle {
      top: 5px;
      right: 5px;
    }

    .toggle-label {
      padding: 6px 10px;
    }

    .toggle-slider {
      width: 28px;
      height: 16px;
    }

    .toggle-slider::before {
      width: 12px;
      height: 12px;
    }

    .toggle-input:checked + .toggle-slider::before {
      transform: translateX(12px);
    }
  }
</style>

<style is:global>
  .map canvas:focus {
    outline: none;
  }

  .maplibregl-marker > svg g[fill="#3FB1CE"] {
    fill: red;
  }

  .city-marker {
    cursor: pointer;
  }

  .city-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    border: 2px solid rgba(255, 255, 255, 0.8);
    transition: all 0.2s ease;
  }

  @media (max-width: 480px) {
    .city-dot {
      width: 10px;
      height: 10px;
      border: 3px solid rgba(255, 255, 255, 0.8);
    }
  }

  .city-marker.visited .city-dot {
    background-color: #00d4ff;
    box-shadow: 0 0 10px rgba(0, 212, 255, 0.4);
  }

  .city-marker:hover .city-dot {
    transform: scale(1.3);
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.6);
  }

  .city-marker.visited:hover .city-dot {
    box-shadow: 0 0 15px rgba(0, 212, 255, 0.8);
  }

  .city-label-overlay {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 6px;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(6px);
    -webkit-backdrop-filter: blur(6px);
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 16px;
    white-space: nowrap;
    pointer-events: none;
    z-index: 10000;
    transform: translateX(-50%);
  }

  .city-label-flag {
    display: flex;
    align-items: center;
  }

  .city-label-flag .flag-fix {
    font-size: 14px;
    line-height: 1;
    border-radius: 3px;
  }

  @media (prefers-color-scheme: light) {
    .city-label-overlay {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(6px);
      -webkit-backdrop-filter: blur(6px);
      color: black;
      border: 1px solid rgba(0, 0, 0, 0.2);
    }
  }

  @media (max-width: 480px) {
    .city-label-overlay {
      padding: 3px 6px;
    }
  }

  /* iOS Safari specific fixes */
  @supports (-webkit-appearance: none) {
    .map {
      /* Force hardware acceleration */
      -webkit-backface-visibility: hidden;
      backface-visibility: hidden;
      /* Prevent iOS Safari rendering issues */
      -webkit-perspective: 1000;
      perspective: 1000;
    }
  }
</style>

<script src="@client/travel-map.ts"></script>
