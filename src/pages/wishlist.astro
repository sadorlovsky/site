---
import PageLayout from "@layouts/PageLayout.astro";

type WishlistItem = {
  id: number;
  title: string;
  price: string;
  imageUrl: string;
  description?: string;
  url?: string;
  priority?: "high" | "medium" | "low";
  received?: boolean;
};

// Mock wishlist data - in a real app this would come from a database
const wishlistItemsRaw: WishlistItem[] = [
  {
    id: 1,
    title: "The Florida Project Limited Edition 4K UHD",
    price: "$52",
    imageUrl: "/second-sight-florida-project.webp",
  },
  {
    id: 2,
    title: "Tangerine Limited Edition Blu-ray",
    price: "$29",
    imageUrl: "/second-sight-tangerine.webp",
  },
  {
    id: 5,
    title: "NOMAD Apple Watch Titanium Band",
    description: "Titanium Band for Apple Watch Ultra",
    price: "$199",
    imageUrl: "/apple-watch-band.webp",
  },
  {
    id: 6,
    title: "Astro Bot Vinyl",
    price: "$39",
    imageUrl: "/astrobot-vinyl.webp",
    url: "https://www.fangamer.com/collections/astro-bot/products/astro-bot-2024-vinyl",
  },
  {
    id: 7,
    title: "Celestial Skies Desk Mat",
    price: "$28",
    imageUrl: "/celeste-deskmat.webp",
    url: "https://www.fangamer.com/collections/celeste/products/celeste-desk-mat-skies",
    received: true,
  },
  {
    id: 8,
    title: "TPOB XO Clipper (Slime Edition)",
    price: "£129.99",
    imageUrl: "/tpob-xo-clipper.webp",
    url: "https://thepissedoffbarber.com/collections/clippers-2/products/xo-clipper-slime",
  },
  {
    id: 9,
    title: "TPOB Skull Foil Shaver (Slime Edition)",
