---
import PageLayout from "@layouts/PageLayout.astro";
import Avatar from "@components/Avatar.astro";
// import SocialLinks from "@components/SocialLinks.astro";

export const prerender = true;
---

<PageLayout title="Zach">
  <main>
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>

    <div class="content">
      <div class="profile-picture">
        <div class="shape"></div>
        <Avatar class="picture" />
      </div>

      <div class="info">
        <h1>Zach</h1>
        <p class="bio">Software engineer & traveler</p>
        <nav class="nav">
          <a href="/travel">/Travel</a>
          <a href="/blog">/Blog</a>
          <a href="/wishlist">/Wishlist</a>
        </nav>
        <!-- <SocialLinks class="social-links" /> -->
      </div>
    </div>
  </main>
</PageLayout>

<style>
  :root {
    --accent-start: rgb(237, 98, 146);
    --accent-end: rgb(237, 87, 96);
  }

  main {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }

  /* Ambient background blobs */
  .blob {
    position: fixed;
    border-radius: 50%;
    filter: blur(80px);
    pointer-events: none;
    z-index: 0;
  }

  .blob-1 {
    width: 500px;
    height: 500px;
    background: linear-gradient(135deg, var(--accent-start), var(--accent-end));
    top: -200px;
    right: -150px;
    opacity: 0.2;
    animation: float1 12s ease-in-out infinite;
  }

  .blob-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    bottom: -150px;
    left: -100px;
    opacity: 0.15;
    animation: float2 15s ease-in-out infinite;
  }

  @keyframes float1 {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(-40px, 40px) scale(1.1);
    }
  }

  @keyframes float2 {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(30px, -30px) scale(1.05);
    }
  }

  .content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .profile-picture {
    position: relative;
    width: 20rem;
    height: 20rem;
    display: flex;
    justify-content: center;
  }

  .shape {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(
      90deg,
      var(--accent-start) 25%,
      var(--accent-end) 87.5%
    );
    background-size: 200% 200%;
    animation:
      morph 8s cubic-bezier(0.68, -0.6, 0.32, 1.6) infinite both alternate,
      spin 12s ease-in-out infinite alternate,
      gradient 7s ease-in-out infinite;
    z-index: 0;
  }

  .picture {
    height: 100%;
    z-index: 1;
  }

  .info {
    text-align: center;
    animation: fadeInUp 0.8s ease-out 0.2s both;
  }

  h1 {
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    margin: 0;
    background: linear-gradient(135deg, var(--accent-start), var(--accent-end));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .bio {
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    color: light-dark(#666, #999);
    margin: 0.5rem 0 0 0;
    font-weight: 400;
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1.25rem;
    margin-top: 1.5rem;
  }

  .nav a {
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    background: linear-gradient(135deg, var(--accent-start), var(--accent-end));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transition: opacity 0.2s ease;
  }

  .nav a:hover {
    opacity: 0.7;
  }

  .social-links {
    margin-top: 1.25rem;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes morph {
    0% {
      border-radius: 40% 60% 60% 40% / 60% 30% 70% 40%;
    }
    100% {
      border-radius: 63% 37% / 44% 45% 55% 56%;
    }
  }

  @keyframes spin {
    to {
      transform: rotate(1turn);
    }
  }

  @keyframes gradient {
    0% {
      background-position: 7% 0%;
    }
    50% {
      background-position: 94% 100%;
    }
    100% {
      background-position: 7% 0%;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .blob-1,
    .blob-2 {
      animation: none;
    }

    .info {
      animation: none;
    }

    .shape {
      animation: none;
      border-radius: 50%;
    }

    .nav-links a {
      transition: none;
    }
  }

  /* Mobile adjustments */
  @media (max-width: 480px) {
    .blob-1 {
      width: 300px;
      height: 300px;
      top: -100px;
      right: -100px;
    }

    .blob-2 {
      width: 250px;
      height: 250px;
      bottom: -100px;
      left: -80px;
    }

    .profile-picture {
      width: 16rem;
      height: 16rem;
    }

    .content {
      gap: 1.5rem;
    }

    .social-links {
      margin-top: 1rem;
    }
  }
</style>

<script src="@client/eye-moving.ts"></script>
