---
import PageLayout from "@layouts/PageLayout.astro";
import Avatar from "@components/Avatar.astro";
---

<PageLayout title="Zach">
  <main>
    <div class="profile-picture">
      <div class="shape"></div>
      <Avatar class="picture" />
    </div>
  </main>
</PageLayout>

<style>
  main {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  .profile-picture {
    position: relative;
    width: 20rem;
    height: 20rem;
    display: flex;
    justify-content: center;
  }

  .shape {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(
      90deg,
      rgb(237, 98, 146) 25%,
      rgb(237, 87, 96) 87.5%
    );
    background-size: 200% 200%;
    animation:
      morph 8s cubic-bezier(0.68, -0.6, 0.32, 1.6) infinite both alternate,
      spin 12s ease-in-out infinite alternate,
      gradient 7s ease-in-out infinite;
    z-index: 0;
  }

  .picture {
    height: 100%;
    z-index: 1;
  }

  @keyframes morph {
    0% {
      border-radius: 40% 60% 60% 40% / 60% 30% 70% 40%;
    }
    100% {
      border-radius: 63% 37% / 44% 45% 55% 56%;
    }
  }

  @keyframes spin {
    to {
      transform: rotate(1turn);
    }
  }

  @keyframes gradient {
    0% {
      background-position: 7% 0%;
    }
    50% {
      background-position: 94% 100%;
    }
    100% {
      background-position: 7% 0%;
    }
  }
</style>

<script src="@scripts/eye-moving.ts"></script>
