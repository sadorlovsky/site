---
import { getCollection, render } from "astro:content";
import { Icon } from "astro-icon/components";
import PageLayout from "@layouts/PageLayout.astro";
import PageHeader from "@components/PageHeader.astro";
import { getEffectivePubDate } from "@lib/blog";

export const prerender = true;

export async function getStaticPaths() {
  // Helper to get URL slug from post ID
  // en/post-name -> post-name (no prefix for English)
  // ru/post-name -> ru/post-name (with ru prefix)
  function getSlugFromId(id: string, lang: "en" | "ru"): string {
    const name = id.replace(/^(en|ru)\//, "");
    return lang === "ru" ? `ru/${name}` : name;
  }

  // Helper to get post URL
  function getPostUrl(id: string, lang: "en" | "ru"): string {
    return `/blog/${getSlugFromId(id, lang)}`;
  }

  const posts = await getCollection("blog");

  // Create translation maps
  const translationMap = new Map<string, string>(); // original ID -> translation ID
  const originalMap = new Map<string, string>(); // translation ID -> original ID

  posts.forEach((post) => {
    if (post.data.lang === "ru" && post.data.translationOf) {
      translationMap.set(post.data.translationOf, post.id);
      originalMap.set(post.id, post.data.translationOf);
    }
  });

  // Sort posts by language for prev/next navigation
  const enPosts = posts
    .filter((p) => p.data.lang === "en")
    .sort((a, b) => getEffectivePubDate(b, posts).getTime() - getEffectivePubDate(a, posts).getTime());

  const ruPosts = posts
    .filter((p) => p.data.lang === "ru")
    .sort((a, b) => getEffectivePubDate(b, posts).getTime() - getEffectivePubDate(a, posts).getTime());

  return posts.map((post) => {
    const isRussian = post.data.lang === "ru";
    const relevantPosts = isRussian ? ruPosts : enPosts;
    const index = relevantPosts.findIndex((p) => p.id === post.id);

    // Get translation info
    const translationId = isRussian
      ? originalMap.get(post.id)
      : translationMap.get(post.id);

    const translationPost = translationId
      ? posts.find((p) => p.id === translationId)
      : null;

    const pubDate = getEffectivePubDate(post, posts);

    return {
      params: { slug: getSlugFromId(post.id, post.data.lang) },
      props: {
        post,
        pubDate,
        prevPost: relevantPosts[index + 1] || null,
        nextPost: relevantPosts[index - 1] || null,
        translationUrl: translationPost
          ? getPostUrl(translationPost.id, translationPost.data.lang)
          : null,
        isTranslation: isRussian,
      },
    };
  });
}

const { post, pubDate, prevPost, nextPost, translationUrl, isTranslation } = Astro.props;
const { Content, headings } = await render(post);

// Format date based on post language
const dateLocale = post.data.lang === "ru" ? "ru-RU" : "en-US";

// Filter headings for TOC (h2 and h3 only)
const tocHeadings = headings.filter((h) => h.depth === 2 || h.depth === 3);
const showToc = tocHeadings.length >= 2;

// Helper to get post URL for prev/next navigation
function getNavUrl(p: typeof post): string {
  const name = p.id.replace(/^(en|ru)\//, "");
  return p.data.lang === "ru" ? `/blog/ru/${name}` : `/blog/${name}`;
}
---

<PageLayout title={post.data.title} description={post.data.description} image={post.data.image?.url}>
  <main>
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>

    <div class="container">
      <PageHeader
        pageTitle={{ en: "Blog", ru: "Блог", href: "/blog" }}
        forceLang={post.data.lang}
      />

      <article>
        <header class="post-header">
          <div class="post-meta">
            <time datetime={pubDate.toISOString()}>
              {
                pubDate.toLocaleDateString(dateLocale, {
                  day: "numeric",
                  month: "long",
                  year: "numeric",
                })
              }
            </time>
            {
              post.data.updatedDate && (
                <span class="updated-date">
                  <span data-en="Updated" data-ru="Обновлено">
                    {post.data.lang === "ru" ? "Обновлено" : "Updated"}
                  </span>
                  {" "}
                  <time datetime={post.data.updatedDate.toISOString()}>
                    {
                      new Date(post.data.updatedDate).toLocaleDateString(dateLocale, {
                        day: "numeric",
                        month: "long",
                        year: "numeric",
                      })
                    }
                  </time>
                </span>
              )
            }
            {
              translationUrl && (
                <a
                  href={translationUrl}
                  class="translation-link"
                >
                  <Icon name="globe" width={14} height={14} />
                  {isTranslation ? "Read in English" : "Читать на русском"}
                </a>
              )
            }
            <button
              id="copy-link"
              class="copy-link"
              aria-label="Copy link to post"
              title="Copy link"
            >
              <span class="copy-link-icons">
                <Icon name="link" width={16} height={16} class="icon-link" />
                <Icon name="check" width={16} height={16} class="icon-check" />
              </span>
            </button>
          </div>
          <h1>{post.data.title}</h1>
          {
            post.data.description && (
              <p class="description">{post.data.description}</p>
            )
          }
        </header>

        {
          showToc && (
            <nav class="toc" aria-label="Table of contents">
              <h2 class="toc-title" data-en="Contents" data-ru="Содержание">
                {post.data.lang === "ru" ? "Содержание" : "Contents"}
              </h2>
              <ol>
                {tocHeadings.map((heading) => (
                  <li class={heading.depth === 3 ? "toc-item toc-h3" : "toc-item"}>
                    <a href={`#${heading.slug}`}>{heading.text}</a>
                  </li>
                ))}
              </ol>
            </nav>
          )
        }

        <div class="content">
          <Content />
        </div>

        {
          (prevPost || nextPost) && (
            <nav class="post-nav" aria-label="Post navigation">
              {prevPost ? (
                <a href={getNavUrl(prevPost)} class="post-nav-link prev">
                  <Icon name="arrow-left" width={16} height={16} />
                  <span class="post-nav-title">{prevPost.data.title}</span>
                </a>
              ) : (
                <div />
              )}
              {nextPost ? (
                <a href={getNavUrl(nextPost)} class="post-nav-link next">
                  <span class="post-nav-title">{nextPost.data.title}</span>
                  <Icon name="arrow-right" width={16} height={16} />
                </a>
              ) : (
                <div />
              )}
            </nav>
          )
        }
      </article>
    </div>

    <button id="back-to-top" class="back-to-top" aria-label="Back to top" hidden>
      <Icon name="chevron-up" width={20} height={20} />
    </button>
  </main>
</PageLayout>

<style>
  :root {
    --accent-start: rgb(237, 98, 146);
    --accent-end: rgb(237, 87, 96);
  }

  main {
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }

  /* Ambient background blobs */
  .blob {
    position: fixed;
    border-radius: 50%;
    filter: blur(80px);
    pointer-events: none;
    z-index: 0;
  }

  .blob-1 {
    width: 500px;
    height: 500px;
    background: linear-gradient(135deg, var(--accent-start), var(--accent-end));
    top: -200px;
    right: -150px;
    opacity: 0.15;
    animation: float1 12s ease-in-out infinite;
  }

  .blob-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    bottom: -150px;
    left: -100px;
    opacity: 0.1;
    animation: float2 15s ease-in-out infinite;
  }

  @keyframes float1 {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(-40px, 40px) scale(1.1);
    }
  }

  @keyframes float2 {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(30px, -30px) scale(1.05);
    }
  }

  .container {
    position: relative;
    z-index: 1;
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;

    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .post-header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid
      light-dark(rgba(0, 0, 0, 0.08), rgba(255, 255, 255, 0.1));
  }

  .post-header time {
    font-size: 0.85rem;
    font-weight: 500;
    color: light-dark(#888, #777);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .updated-date {
    font-size: 0.85rem;
    font-weight: 500;
    color: light-dark(#888, #777);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding-left: 0.75rem;
    border-left: 1px solid light-dark(rgba(0, 0, 0, 0.15), rgba(255, 255, 255, 0.15));
  }

  .updated-date time {
    color: var(--accent-start);
  }

  .post-header h1 {
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    margin: 0.75rem 0 0 0;
    line-height: 1.2;
    background: linear-gradient(135deg, var(--accent-start), var(--accent-end));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .post-header .description {
    font-size: 1.1rem;
    color: light-dark(#555, #aaa);
    margin: 1rem 0 0 0;
    line-height: 1.6;
  }

  /* Post meta (date + copy link) */
  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .post-meta time {
    line-height: 1;
  }

  .translation-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--accent-start);
    text-decoration: none;
    height: 32px;
    padding: 0 0.75rem;
    border-radius: 8px;
    background: light-dark(rgba(237, 98, 146, 0.1), rgba(237, 98, 146, 0.15));
    transition: all 0.2s;
  }

  .translation-link:hover {
    background: light-dark(rgba(237, 98, 146, 0.18), rgba(237, 98, 146, 0.25));
  }

  .translation-link:visited {
    color: var(--accent-start);
  }

  .copy-link {
    display: none;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    border: 1px solid light-dark(rgba(0, 0, 0, 0.08), rgba(255, 255, 255, 0.1));
    border-radius: 8px;
    background: light-dark(rgba(0, 0, 0, 0.05), rgba(255, 255, 255, 0.08));
    color: light-dark(#888, #777);
    cursor: pointer;
    transition: all 0.2s;
  }

  @media (hover: hover) and (pointer: fine) {
    .copy-link {
      display: inline-flex;
    }
  }

  .copy-link:hover {
    color: light-dark(#333, #fff);
    background: light-dark(rgba(0, 0, 0, 0.08), rgba(255, 255, 255, 0.12));
    border-color: light-dark(rgba(0, 0, 0, 0.15), rgba(255, 255, 255, 0.18));
  }

  .copy-link:focus-visible {
    outline: 2px solid var(--accent-start);
    outline-offset: 2px;
  }

  .copy-link-icons {
    position: relative;
    width: 16px;
    height: 16px;
  }

  .copy-link .icon-link,
  .copy-link .icon-check {
    position: absolute;
    top: 0;
    left: 0;
    transition: transform 0.25s cubic-bezier(0.34, 1.56, 0.64, 1), opacity 0.2s ease;
  }

  .copy-link .icon-check {
    opacity: 0;
    transform: scale(0.5);
    color: var(--accent-start);
  }

  .copy-link.copied .icon-link {
    opacity: 0;
    transform: scale(0.5);
  }

  .copy-link.copied .icon-check {
    opacity: 1;
    transform: scale(1);
  }

  /* Table of Contents */
  .toc {
    margin-bottom: 2.5rem;
    padding: 1.25rem 1.5rem;
    border-radius: 12px;
    background: light-dark(rgba(0, 0, 0, 0.025), rgba(255, 255, 255, 0.03));
    border: 1px solid light-dark(rgba(0, 0, 0, 0.06), rgba(255, 255, 255, 0.06));
    position: relative;
  }

  .toc::before {
    content: "";
    position: absolute;
    left: 0;
    top: 1.25rem;
    bottom: 1.25rem;
    width: 3px;
    border-radius: 0 2px 2px 0;
    background: linear-gradient(180deg, var(--accent-start), var(--accent-end));
    opacity: 0.6;
  }

  .toc-title {
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin: 0 0 1rem 0;
    color: light-dark(#666, #888);
  }

  .toc ol {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .toc-item {
    margin: 0;
    position: relative;
  }

  .toc-h3 {
    padding-left: 1rem;
  }

  .toc a {
    color: light-dark(#555, #aaa);
    text-decoration: none;
    font-size: 0.9rem;
    line-height: 1.5;
    transition: color 0.15s;
  }

  .toc a:visited {
    color: light-dark(#555, #aaa);
  }

  .toc a:hover {
    color: var(--accent-start);
  }

  .toc a:active {
    color: var(--accent-end);
  }

  .toc a:focus-visible {
    outline: 2px solid var(--accent-start);
    outline-offset: 2px;
  }

  /* Post navigation (prev/next) */
  .post-nav {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 2.5rem;
    padding-top: 2rem;
    border-top: 1px solid
      light-dark(rgba(0, 0, 0, 0.08), rgba(255, 255, 255, 0.1));
  }

  .post-nav-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 0;
    color: light-dark(#555, #aaa);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
    min-width: 0;
  }

  .post-nav-link:hover {
    color: var(--accent-start);
  }

  .post-nav-link:focus-visible {
    outline: 2px solid var(--accent-start);
    outline-offset: 2px;
  }

  .post-nav-link.next {
    justify-content: flex-end;
    text-align: right;
  }

  .post-nav-title {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .post-nav-link svg {
    flex-shrink: 0;
    transition: transform 0.2s;
  }

  .post-nav-link.prev:hover svg {
    transform: translateX(-3px);
  }

  .post-nav-link.next:hover svg {
    transform: translateX(3px);
  }

  /* Back to top button */
  .back-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    border: 1px solid
      light-dark(rgba(0, 0, 0, 0.1), rgba(255, 255, 255, 0.1));
    background: light-dark(rgba(255, 255, 255, 0.9), rgba(40, 40, 45, 0.9));
    color: light-dark(#666, #aaa);
    cursor: pointer;
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.3s,
      transform 0.3s,
      background 0.2s,
      color 0.2s;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  @media (hover: hover) and (pointer: fine) {
    .back-to-top {
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
    }
  }

  .back-to-top.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .back-to-top:hover {
    background: linear-gradient(135deg, var(--accent-start), var(--accent-end));
    border-color: transparent;
    color: white;
  }

  .back-to-top:focus-visible {
    outline: 2px solid var(--accent-start);
    outline-offset: 2px;
  }

  /* Content typography */
  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: light-dark(#333, #ddd);
  }

  .content :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem 0;
    color: light-dark(#111, #fafafa);
  }

  .content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 2rem 0 0.75rem 0;
    color: light-dark(#222, #eee);
  }

  .content :global(p) {
    margin: 0 0 1.5rem 0;
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .content :global(a) {
    color: var(--accent-start);
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 3px;
    text-decoration-color: rgba(237, 98, 146, 0.4);
    transition: color 0.15s ease, text-decoration-color 0.15s ease;
  }

  .content :global(a:visited) {
    color: light-dark(#8b5a7c, #d4a5c9);
    text-decoration-color: light-dark(
      rgba(139, 90, 124, 0.4),
      rgba(212, 165, 201, 0.4)
    );
  }

  .content :global(a:hover) {
    color: var(--accent-end);
    text-decoration-color: currentColor;
  }

  .content :global(code) {
    font-family: "FiraCodeVariable", monospace;
    font-size: 0.9em;
    background: light-dark(rgba(0, 0, 0, 0.06), rgba(255, 255, 255, 0.1));
    padding: 0.2em 0.4em;
    border-radius: 4px;
  }

  .content :global(pre) {
    background: light-dark(#1e1e1e, #0d0d0d);
    border-radius: 12px;
    padding: 1.25rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  /* Remove italic from syntax highlighting (catppuccin theme uses italic for some tokens) */
  .content :global(pre code .line span) {
    font-style: normal !important;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 0 0 1.5rem 0;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(blockquote) {
    border-left: 3px solid var(--accent-start);
    margin: 1.5rem 0;
    padding: 0.75rem 0 0.75rem 1.25rem;
    color: light-dark(#555, #aaa);
    font-style: normal;
    background: light-dark(rgba(237, 98, 146, 0.05), rgba(237, 98, 146, 0.08));
    border-radius: 0 8px 8px 0;
  }

  .content :global(blockquote h3) {
    margin: 0 0 0.5rem 0;
    font-size: 1rem;
  }

  .content :global(blockquote p:last-child) {
    margin-bottom: 0;
  }

  .content :global(blockquote pre) {
    margin: 1rem 0 0.5rem;
    border-radius: 8px;
  }

  .content :global(blockquote pre:last-child) {
    margin-bottom: 0;
  }

  .content :global(img) {
    max-width: 100%;
    width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 1.5rem 0;
  }

  .content :global(figure) {
    margin: 1.5rem 0;
  }

  .content :global(figure img) {
    margin: 0;
  }

  .content :global(figcaption) {
    font-size: 0.9rem;
    color: light-dark(#666, #999);
    text-align: center;
    margin-top: 0.75rem;
    font-style: italic;
  }

  .content :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      light-dark(#ddd, #444) 20%,
      light-dark(#ddd, #444) 80%,
      transparent
    );
    margin: 2.5rem 0;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .blob-1,
    .blob-2 {
      animation: none;
    }

    .post-nav-link,
    .post-nav-link svg,
    .back-to-top,
    .copy-link,
    .toc a {
      transition: none;
    }
  }

  /* Mobile adjustments */
  @media (max-width: 640px) {
    .blob-1 {
      width: 300px;
      height: 300px;
      top: -100px;
      right: -100px;
    }

    .blob-2 {
      width: 250px;
      height: 250px;
      bottom: -100px;
      left: -80px;
    }

    .container {
      padding: 1.5rem 1rem 3rem;
    }

    .post-header {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
    }

    .content {
      font-size: 1rem;
    }

    .content :global(p) {
      font-size: 1rem;
    }

    .content :global(h2) {
      font-size: 1.3rem;
    }

    .content :global(h3) {
      font-size: 1.15rem;
    }

    .content :global(pre) {
      padding: 1rem;
      border-radius: 8px;
      margin-left: -0.5rem;
      margin-right: -0.5rem;
    }

    .toc {
      padding: 1rem 1.25rem;
    }

    .toc::before {
      top: 1rem;
      bottom: 1rem;
    }

    .post-nav {
      grid-template-columns: 1fr;
    }

    .post-nav-link.next {
      justify-content: flex-start;
      text-align: left;
    }

    .back-to-top {
      bottom: 1.5rem;
      right: 1.5rem;
    }
  }
</style>

<script>
  // Back to top button
  const backToTopBtn = document.getElementById("back-to-top");
  const threshold = 300;

  if (backToTopBtn) {
    const prefersReducedMotion = window.matchMedia(
      "(prefers-reduced-motion: reduce)"
    ).matches;

    window.addEventListener("scroll", () => {
      const shouldShow = window.scrollY > threshold;
      backToTopBtn.classList.toggle("visible", shouldShow);
      backToTopBtn.hidden = !shouldShow;
    });

    backToTopBtn.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
        behavior: prefersReducedMotion ? "auto" : "smooth",
      });
    });
  }

  // Copy link button
  const copyLinkBtn = document.getElementById("copy-link");

  if (copyLinkBtn) {
    copyLinkBtn.addEventListener("click", async () => {
      await navigator.clipboard.writeText(window.location.href);
      copyLinkBtn.classList.add("copied");
      setTimeout(() => copyLinkBtn.classList.remove("copied"), 2000);
    });
  }

</script>
