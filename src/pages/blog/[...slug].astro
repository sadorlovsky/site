---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";
import PageLayout from "@layouts/PageLayout.astro";

export async function getStaticPaths() {
  const blogEntries = await getCollection("posts");
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<PageLayout title={entry.data.title}>
  <main>
    <div class="blob blob-1"></div>
    <div class="blob blob-2"></div>

    <div class="container">
      <nav class="back-nav">
        <a href="/blog" class="back-link">
          <Icon name="arrow-left" width={18} height={18} />
          <span>All posts</span>
        </a>
      </nav>

      <article>
        <header class="post-header">
          <time datetime={entry.data.pubDate.toISOString()}>
            {
              new Date(entry.data.pubDate).toLocaleDateString("en-US", {
                day: "numeric",
                month: "long",
                year: "numeric",
              })
            }
          </time>
          <h1>{entry.data.title}</h1>
          {
            entry.data.description && (
              <p class="description">{entry.data.description}</p>
            )
          }
        </header>

        <div class="content">
          <Content />
        </div>
      </article>
    </div>
  </main>
</PageLayout>

<style>
  :root {
    --accent-start: rgb(237, 98, 146);
    --accent-end: rgb(237, 87, 96);
  }

  main {
    min-height: 100vh;
    position: relative;
    overflow: hidden;
  }

  /* Ambient background blobs */
  .blob {
    position: fixed;
    border-radius: 50%;
    filter: blur(80px);
    pointer-events: none;
    z-index: 0;
  }

  .blob-1 {
    width: 500px;
    height: 500px;
    background: linear-gradient(135deg, var(--accent-start), var(--accent-end));
    top: -200px;
    right: -150px;
    opacity: 0.15;
    animation: float1 12s ease-in-out infinite;
  }

  .blob-2 {
    width: 400px;
    height: 400px;
    background: linear-gradient(135deg, #6366f1, #8b5cf6);
    bottom: -150px;
    left: -100px;
    opacity: 0.1;
    animation: float2 15s ease-in-out infinite;
  }

  @keyframes float1 {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(-40px, 40px) scale(1.1);
    }
  }

  @keyframes float2 {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(30px, -30px) scale(1.05);
    }
  }

  .container {
    position: relative;
    z-index: 1;
    max-width: 720px;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
  }

  .back-nav {
    margin-bottom: 2rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem;
    color: light-dark(#666, #888);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .back-link:hover {
    color: var(--accent-start);
  }

  .back-link:hover svg {
    transform: translateX(-3px);
  }

  .back-link svg {
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  article {
    background: light-dark(rgba(255, 255, 255, 0.6), rgba(40, 40, 45, 0.6));
    border: 1px solid
      light-dark(rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.1));
    border-radius: 20px;
    padding: 2.5rem;
    box-shadow:
      0 4px 24px -1px light-dark(rgba(0, 0, 0, 0.08), rgba(0, 0, 0, 0.3)),
      0 0 0 1px light-dark(rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.05))
        inset;
  }

  @media (hover: hover) and (pointer: fine) {
    article {
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
    }
  }

  .post-header {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid
      light-dark(rgba(0, 0, 0, 0.08), rgba(255, 255, 255, 0.1));
  }

  .post-header time {
    font-size: 0.85rem;
    font-weight: 500;
    color: light-dark(#888, #777);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-header h1 {
    font-size: clamp(1.75rem, 5vw, 2.5rem);
    font-weight: 700;
    letter-spacing: -0.02em;
    margin: 0.75rem 0 0 0;
    line-height: 1.2;
    background: linear-gradient(135deg, var(--accent-start), var(--accent-end));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .post-header .description {
    font-size: 1.1rem;
    color: light-dark(#555, #aaa);
    margin: 1rem 0 0 0;
    line-height: 1.6;
  }

  /* Content typography */
  .content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: light-dark(#333, #ddd);
  }

  .content :global(h2) {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 2.5rem 0 1rem 0;
    color: light-dark(#111, #fafafa);
  }

  .content :global(h3) {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 2rem 0 0.75rem 0;
    color: light-dark(#222, #eee);
  }

  .content :global(p) {
    margin: 0 0 1.5rem 0;
  }

  .content :global(a) {
    color: var(--accent-start);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }

  .content :global(a:hover) {
    color: var(--accent-end);
  }

  .content :global(code) {
    font-family: "FiraCodeVariable", monospace;
    font-size: 0.9em;
    background: light-dark(rgba(0, 0, 0, 0.06), rgba(255, 255, 255, 0.1));
    padding: 0.2em 0.4em;
    border-radius: 4px;
  }

  .content :global(pre) {
    background: light-dark(#1e1e1e, #0d0d0d);
    border-radius: 12px;
    padding: 1.25rem;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  .content :global(ul),
  .content :global(ol) {
    margin: 0 0 1.5rem 0;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(blockquote) {
    border-left: 3px solid var(--accent-start);
    margin: 1.5rem 0;
    padding: 0.5rem 0 0.5rem 1.25rem;
    color: light-dark(#555, #aaa);
    font-style: italic;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 1.5rem 0;
  }

  .content :global(hr) {
    border: none;
    height: 1px;
    background: linear-gradient(
      to right,
      transparent,
      light-dark(#ddd, #444) 20%,
      light-dark(#ddd, #444) 80%,
      transparent
    );
    margin: 2.5rem 0;
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .blob-1,
    .blob-2 {
      animation: none;
    }

    .back-link,
    .back-link svg {
      transition: none;
    }
  }

  /* Mobile adjustments */
  @media (max-width: 640px) {
    .blob-1 {
      width: 300px;
      height: 300px;
      top: -100px;
      right: -100px;
    }

    .blob-2 {
      width: 250px;
      height: 250px;
      bottom: -100px;
      left: -80px;
    }

    .container {
      padding: 1.5rem 1rem 3rem;
    }

    .back-nav {
      margin-bottom: 1.5rem;
    }

    article {
      padding: 1.5rem;
      border-radius: 16px;
    }

    .post-header {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
    }

    .content {
      font-size: 1rem;
    }

    .content :global(h2) {
      font-size: 1.3rem;
    }

    .content :global(h3) {
      font-size: 1.15rem;
    }

    .content :global(pre) {
      padding: 1rem;
      border-radius: 8px;
      margin-left: -0.5rem;
      margin-right: -0.5rem;
    }
  }
</style>
